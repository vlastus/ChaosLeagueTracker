
@model CLTWebUI.Models.Team.TeamDetailViewModel

<div class="container">
    <div class="row">
        <div class="col-md-4">@Model.Team.Name</div>
        <div class="col-md-4">@Model.Team.Users.Name</div>
        <div class="col-md-4">...</div>
    </div>
    <ul class="list-group">
        @foreach (var player in Model.Team.Players)
        {
            <li class="list-group-item">
                <div class="row ">
                    <div class="col-md-2">@player.Name</div>
                    <div class="col-md-2">@player.PlayerTypes.Race @player.PlayerTypes.Name</div>
                    <div class="col-md-5">
                        <div class="row">
                            <div class="col-md-10">
                                <div class="row">
                                    <div class="col-xs-1"><span class="badge">@player.MA</span></div>
                                    <div class="col-xs-1"><span class="badge">@player.ST</span></div>
                                    <div class="col-xs-1"><span class="badge">@player.AG</span></div>
                                    <div class="col-xs-1"><span class="badge">@player.AV</span></div>
                                    <div class="col-xs-1">@player.INT</div>
                                    <div class="col-xs-1">@player.COMP</div>
                                    <div class="col-xs-1">@player.TD</div>
                                    <div class="col-xs-1">@player.CAS</div>
                                    <div class="col-xs-1">@player.Kills</div>
                                    <div class="col-xs-1 label label-success" style="font-size: 95%;">@player.SPP</div>
                                    @if (player.MNG == 1)
                                    { <div class="col-xs-1 glyphicon glyphicon-remove label label-danger" style="padding: 4px 5px 4px 5px;"> </div>}
                                    else { <div class="col-xs-1"></div>}
                                    @if (player.NI == 1)
                                    { <div class="col-xs-1 glyphicon glyphicon-ok label label-danger" style="padding: 4px 5px 4px 5px;"> </div>}
                                    else { <div class="col-xs-1"></div>}
                                </div>
                            </div>
                            <div class="col-md-2">@player.Value</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        @{ int i = 0;}
                        @foreach (var skill in player.PlayerSkills)
                        {
                            if (i > 0)
                            {<span>, </span>};
                            @skill.Skill
                            i++;
                        }
                    </div>
                </div>
            </li>
        }
    </ul>
</div>